<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="449.0" prefWidth="776.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ButtonBar prefHeight="40.0" prefWidth="200.0">
     <buttons>
       <Button id="delete" mnemonicParsing="false" onAction="#onDelete" text="Удалить" />
         <Button id="refresh" alignment="BASELINE_CENTER" nodeOrientation="RIGHT_TO_LEFT" onAction="#onRefresh" text="Обновить" />
          <Button id="add" alignment="BASELINE_CENTER" nodeOrientation="RIGHT_TO_LEFT" onAction="#onAdd" text="Добавить" />
         <Button id="edit" mnemonicParsing="false" onAction="#onEdit" text="Редактировать" />
     </buttons>
   </ButtonBar>
    <TableView fx:id="table" prefHeight="388.0" prefWidth="736.0">
        <columns>
            <TableColumn fx:id="idCol" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="nameCol" prefWidth="90.0" text="name" />
            <TableColumn fx:id="nicknameCol" prefWidth="90.0" text="nickname" />
            <TableColumn fx:id="costCol" prefWidth="75.0" text="cost" />
            <TableColumn fx:id="breedCol" prefWidth="90.0" text="breed" />
            <TableColumn fx:id="birthCol" prefWidth="90.0" text="birthdate" />
            <TableColumn fx:id="colorCol" prefWidth="90.0" text="color" />
        </columns>
    </TableView>
</VBox>
